{
  "compilerOptions": {
    "strict": false,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "sourceMap": false,
    "noEmitOnError": true,
    "rootDir": "src",
    "module": "ES6",
    "outDir": "./built",
    "allowJs": true,
    "target": "ESNext",
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": ["./src/**/*"]
}
