{
  "manifest_version": 3,
  "name": "Tiny Website Blocker",
  "description": "Blocks websites you choose.",
  "version": "2.0.3",
  "options_page": "options.html",
  "permissions": ["storage", "tabs", "activeTab", "contextMenus"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": { "service_worker": "background.js", "type": "module" },
  "icons": {
    "16": "icons/website_blocker_icon_16x16.png",
    "32": "icons/website_blocker_icon_32x32.png",
    "48": "icons/website_blocker_icon_48x48.png",
    "128": "icons/website_blocker_icon_128x128.png"
  },
  "minimum_chrome_version": "92"
}
